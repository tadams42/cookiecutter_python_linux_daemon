{
    "version": 1,
    "disable_existing_loggers": false,
    "filters": {
        "standard_metadata": {
            "()": "seveno_pyutil.StandardMetadataFilter"
        }
    },
    "formatters": {
        "filelog": {
            "()": "seveno_pyutil.SingleLineColoredFormatter",
            "format": "%(isotime)s %(hostname)s {service_name}[%(process)d] [%(log_color)s%(levelname)s%(reset)s] %(message)s"
        },
        "syslog": {
            "()": "seveno_pyutil.SingleLineFormatter",
            "format": "[%(process)d] [%(isotime)s] [%(levelname)s] %(message)s"
        }
    },
    "handlers": {
        "null": {
            "class": "logging.NullHandler"
        },
        "console": {
            "class": "logging.StreamHandler",
            "filters": ["standard_metadata"],
            "formatter": "filelog",
            "level": "DEBUG",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.WatchedFileHandler",
            "filename": null,
            "filters": ["standard_metadata"],
            "formatter": "filelog",
            "level": "DEBUG"
        },
        "syslog": {
            ".": { "ident": "{service_name}" },
            "address": "/run/systemd/journal/syslog",
            "class": "logging.handlers.SysLogHandler",
            "facility": "local1",
            "filters": ["standard_metadata"],
            "formatter": "syslog",
            "level": "DEBUG"
        }
    },
    "root": {
        "handlers": ["console", "file", "syslog"],
        "level": "DEBUG"
    },
    "loggers": {
        "{{cookiecutter.project_slug}}": {"handlers": ["file", "syslog", "console"], "level": "DEBUG"},
        "seveno_pyutil": {"handlers": ["file", "syslog", "console"], "level": "INFO"}
    }
}
