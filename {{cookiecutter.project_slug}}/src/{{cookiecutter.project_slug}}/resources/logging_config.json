{
    "version": 1,
    "disable_existing_loggers": false,
    "filters": {
        "dynamic_context": {
            "()": "seveno_pyutil.DynamicContextFilter"
        },
        "standard_metadata": {
            "()": "seveno_pyutil.StandardMetadataFilter"
        }
    },
    "formatters": {
        "filelog": {
            "()": "seveno_pyutil.SingleLineColoredFormatter",
            "format": "%(isotime)s %(hostname)s {service_name} %(process)d [%(log_color)s%(levelname)s%(reset)s] [%(threadName)s]%(dynamic_context_values)s %(message)s"
        },
        "syslog": {
            "()": "seveno_pyutil.SingleLineFormatter",
            "format": "1 %(isotime)s %(hostname)s {service_name} %(process)d - - [%(levelname)s] [%(threadName)s]%(dynamic_context_values)s %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "filters": ["standard_metadata", "dynamic_context"],
            "formatter": "filelog",
            "level": "DEBUG",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.WatchedFileHandler",
            "filename": null,
            "filters": ["standard_metadata", "dynamic_context"],
            "formatter": "filelog",
            "level": "DEBUG"
        },
        "syslog": {
            "address": "/run/systemd/journal/syslog",
            "class": "logging.handlers.SysLogHandler",
            "facility": "local1",
            "filters": ["standard_metadata", "dynamic_context"],
            "formatter": "syslog",
            "level": "DEBUG"
        }
    },
    "loggers": {
        "{{cookiecutter.project_slug}}": {"handlers": ["file", "syslog"], "level": "DEBUG"},
        "seveno_pyutil": {"handlers": ["file", "syslog"], "level": "INFO"}
    }
}
